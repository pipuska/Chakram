@{
    ViewData["Title"] = "Добавление сотрудника";
}

<div class="text-center">
    <h1 class="display-4">Добавление нового сотрудника</h1>
</div>

<div class="container mt-5">
    <form>
        <div class="form-group">
            <label for="fullName">ФИО</label>
            <input type="text" class="form-control" id="fullName" placeholder="Введите полное имя">
        </div>

        <div class="form-group">
            <label for="position">Должность</label>
            <input type="text" class="form-control" id="position" placeholder="Введите должность">
        </div>

        <div class="form-group">
            <label for="department">Отдел</label>
            <input type="text" class="form-control" id="department" placeholder="Введите отдел">
        </div>

        <div class="form-group">
            <label for="hireDate">Дата приёма</label>
            <input type="date" class="form-control" id="hireDate">
        </div>

        <div class="form-group">
            <label for="rate">Ставка (руб/час)</label>
            <input type="number" class="form-control" id="rate" placeholder="Введите ставку">
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a href="/" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>